{
  "$schema": "../../models/tsp-output/schemas/Graph.json",
  "title": "Hello, Fireside!",
  "author": "Jane Developer",
  "date": "2026-02-19",
  "description": "Comprehensive smoke test deck for transitions, image loading, containers, and extensions.",
  "version": "0.1.0",
  "tags": ["intro", "smoke", "visual"],
  "theme": "default",
  "font": "JetBrains Mono",
  "defaults": {
    "layout": "default",
    "transition": "fade"
  },
  "nodes": [
    {
      "id": "title",
      "layout": "center",
      "transition": "fade",
      "content": [
        { "kind": "heading", "level": 1, "text": "Hello, Fireside!" },
        { "kind": "text", "body": "Portable branching presentations in JSON." },
        { "kind": "text", "body": "This deck is used for runtime smoke testing." }
      ]
    },
    {
      "id": "code-demo",
      "layout": "fullscreen",
      "transition": "slide-left",
      "content": [
        { "kind": "heading", "level": 2, "text": "Code + Highlight" },
        {
          "kind": "code",
          "language": "rust",
          "source": "fn main() {\n    let message = \"Hello from Fireside!\";\n    println!(\"{message}\");\n}",
          "highlight-lines": [2],
          "show-line-numbers": true
        }
      ]
    },
    {
      "id": "image-success",
      "layout": "center",
      "transition": "slide-right",
      "content": [
        { "kind": "heading", "level": 2, "text": "Image Metadata (Success)" },
        {
          "kind": "image",
          "src": "assets/sample.ppm",
          "alt": "8x8 generated smoke-test sample",
          "caption": "Renderer should display detected width Ã— height."
        }
      ]
    },
    {
      "id": "image-fallback",
      "layout": "center",
      "transition": "wipe",
      "content": [
        { "kind": "heading", "level": 2, "text": "Image Fallback (Missing File)" },
        {
          "kind": "image",
          "src": "assets/missing-sample.ppm",
          "alt": "missing image",
          "caption": "Renderer should keep running and show fallback details."
        }
      ]
    },
    {
      "id": "container-splits",
      "transition": "dissolve",
      "content": [
        { "kind": "heading", "level": 2, "text": "Container Layout Hints" },
        {
          "kind": "container",
          "layout": "split-horizontal",
          "children": [
            { "kind": "text", "body": "left: split-horizontal should render side-by-side" },
            { "kind": "text", "body": "right: with column separator" }
          ]
        },
        {
          "kind": "container",
          "layout": "split-vertical",
          "children": [
            { "kind": "text", "body": "top: split-vertical" },
            { "kind": "text", "body": "bottom: separated with a divider line" }
          ]
        }
      ]
    },
    {
      "id": "extension-known",
      "transition": "matrix",
      "content": [
        { "kind": "heading", "level": 2, "text": "Extension Rendering (Known)" },
        {
          "kind": "extension",
          "type": "acme.mermaid",
          "code": "graph TD; Input-->Validate; Validate-->Render;"
        },
        {
          "kind": "extension",
          "type": "acme.table",
          "headers": ["kind", "status"],
          "rows": [
            ["image", "ok"],
            ["transition", "ok"],
            ["extension", "ok"]
          ]
        }
      ]
    },
    {
      "id": "extension-unknown",
      "transition": "typewriter",
      "content": [
        { "kind": "heading", "level": 2, "text": "Extension Rendering (Unknown + Fallback)" },
        {
          "kind": "extension",
          "type": "vendor.custom-widget",
          "payload": { "mode": "experimental", "version": 1 },
          "fallback": {
            "kind": "text",
            "body": "Fallback content is displayed when extension type is unsupported."
          }
        }
      ]
    },
    {
      "id": "branch-demo",
      "layout": "center",
      "transition": "fade",
      "content": [
        { "kind": "heading", "level": 2, "text": "Choose Your Path" },
        {
          "kind": "text",
          "body": "Press a, b, or c to branch; use back to return."
        }
      ],
      "traversal": {
        "branch-point": {
          "id": "topic-choice",
          "prompt": "What would you like to explore?",
          "options": [
            { "label": "Themes", "key": "a", "target": "themes" },
            { "label": "Blocks", "key": "b", "target": "blocks" },
            { "label": "Skip", "key": "c", "target": "thanks" }
          ]
        }
      }
    },
    {
      "id": "themes",
      "transition": "slide-left",
      "content": [
        { "kind": "heading", "level": 2, "text": "Themes" },
        {
          "kind": "list",
          "items": [
            "Semantic token mapping",
            "CLI, document, and default precedence",
            "Terminal-native palettes"
          ]
        }
      ],
      "traversal": { "next": "thanks" }
    },
    {
      "id": "blocks",
      "transition": "slide-right",
      "content": [
        { "kind": "heading", "level": 2, "text": "Core Blocks" },
        {
          "kind": "list",
          "ordered": true,
          "items": ["heading", "text", "code", "list", "image", "divider", "container", "extension"]
        }
      ],
      "traversal": { "next": "thanks" }
    },
    {
      "id": "thanks",
      "layout": "center",
      "transition": "dissolve",
      "content": [
        { "kind": "heading", "level": 1, "text": "Thanks" },
        { "kind": "text", "body": "Smoke test complete if all transitions and blocks render." }
      ],
      "speaker-notes": "Validate branch options and transition pacing before ending session."
    }
  ]
}
