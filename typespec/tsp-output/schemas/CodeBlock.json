{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "CodeBlock.json",
    "type": "object",
    "properties": {
        "kind": {
            "type": "string",
            "const": "code"
        },
        "language": {
            "type": "string",
            "description": "Programming language identifier for syntax highlighting."
        },
        "source": {
            "type": "string",
            "description": "The source code content."
        },
        "highlight-lines": {
            "type": "array",
            "items": {
                "type": "integer",
                "minimum": -2147483648,
                "maximum": 2147483647
            },
            "description": "Line numbers to visually emphasize."
        },
        "show-line-numbers": {
            "type": "boolean",
            "description": "Whether to display line numbers."
        }
    },
    "required": [
        "kind",
        "source"
    ],
    "description": "A fenced code block with language annotation and optional highlighting."
}